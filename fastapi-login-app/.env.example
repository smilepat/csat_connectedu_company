# ===========================================
# ConnectedU ItemGen API - Environment Config
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# Application Settings
# ===========================================
ENV=development
LOG_LEVEL=INFO
APP_DEBUG=0

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=86400

# ===========================================
# Java API Integration
# ===========================================
JAVA_AUTH_URL=https://your-api-server.com/api/teacher/login/check
JAVA_BASE=https://your-api-server.com
JAVA_SAVE_URL=https://your-api-server.com/api/questions/add
JAVA_LIST_URL=https://your-api-server.com/api/questions/list
JAVA_UPDATE_URL=https://your-api-server.com/api/questions/edit
JAVA_DETAIL_URL=https://your-api-server.com/api/questions/detail
JAVA_BASIC_AUTH=Basic your_base64_encoded_credentials
JAVA_PAGES_BASIC_AUTH=Basic your_base64_encoded_credentials
JAVA_MOCK=0

# ===========================================
# LLM API Configuration
# ===========================================
# Options: azure, gemini, openai
OPENAI_API_TYPE=azure

# Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Gemini (alternative)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL_NAME=gemini-2.5-flash

# OpenAI Public (alternative)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL_NAME=gpt-4

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Security (Required for JWT)
# ===========================================
SECRET_KEY=your_secret_key_here_change_in_production
